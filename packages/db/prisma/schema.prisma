
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  runtime = "bun"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String @id @default(uuid())
  username  String @unique
  password  String
  website   Website[]
}

model Website {
  id         String @id @default(uuid())
  url        String @unique
  user       String
  userId      User @relation(fields: [user], references: [id])
  timestamp  DateTime
  tick       WebsiteTick[]
}

model Region {
  id         String @id @default(uuid())
  region     String
  tick       WebsiteTick[]
}

model WebsiteTick {
  id         String @id @default(uuid())
  status     WebsiteStatus
  website     String
  websiteId  Website @relation(fields: [website], references: [id])
  region     String
  regionId   Region @relation(fields: [region], references: [id])
  timestamp  DateTime @default(now())
}

enum WebsiteStatus {
  up
  down
  unknown
}